{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true
  },
  "include": [
    "*.ts",
    "../../extension/src/core/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
